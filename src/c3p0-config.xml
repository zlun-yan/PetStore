<?xml version="1.0" encoding="UTF-8"?>
<c3p0-config>
	<!-- 默认配置 -->
	<default-config>
		<!-- 四大连接参数的配置 -->
		<property name="jdbcUrl">jdbc:mysql://localhost:3306/petstore?useUnicode=true&amp;autoReconnect=true&amp;characterEncoding=utf-8</property>
		<property name="driverClass">com.mysql.jdbc.Driver</property>
		<property name="user">root</property>
		<property name="password">1234</property>
		<!-- 池参数的配置 -->
		<!-- 最小连接数 -->
		<property name="minPoolSize">2</property>
		<!-- 最大连接数 -->
		<property name="maxPoolSize">10</property>
		<!-- 初始连接数 -->
		<property name="initalPoolSize">5</property>
		<!--acquireIncrement 如果池内的连接用完，自增3个  -->
		<property name="acquireIncrement">3</property>
	</default-config>
</c3p0-config>